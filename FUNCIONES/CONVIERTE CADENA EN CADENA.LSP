(DEFUN CADTOCAD (CADENAFTE CARACTERr ANCHOF)
  (IF (> (STRLEN CADENAFTE) ANCHOF) ())
  (SETQ DIFCAD (- ANCHOF (STRLEN CADENAFTE)))
  (SETQ DATOCOMP "")
  (REPEAT DIFCAD
    (SETQ DATOCOMP (STRCAT CARACTERr DATOCOMP))
  )
  (SETQ CADENAFTE (STRCAT CADENAFTE DATOCOMP ))
)

